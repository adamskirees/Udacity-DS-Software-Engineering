name: Python Package Tests

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pandas fasthtml pytest
        # This installs your package so the test can 'see' it
        pip install -e ./python-package

    - name: Run Package Import Test
      run: |
        # This checks if the package is installed and accessible
        python -c "from employee_events.employee import Employee; print('Import Success!')"