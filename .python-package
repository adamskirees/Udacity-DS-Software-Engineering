name: Python Package Tests

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: Debug Folder Structure
      run: ls -R

    - name: Install Basic Requirements
      run: |
        python -m pip install --upgrade pip
        # We only need pandas to test the logic package
        pip install pandas pytest

    - name: Run Package Import Test
      run: |
        python -c "from employee_events.employee import Employee; print('Import Success!')"